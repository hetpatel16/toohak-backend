{
    "scripts": {
        "test": "jest",
        "test-coverage": "nyc npm run test",
        "tsc": "tsc --project tsconfig.json",
        "lint": "eslint '**/*.{ts,js}'",
        "lint-fix": "eslint --fix '**/*.{ts,js}'",
        "start": "tsx src/server.ts",
        "cleanup-sync-request": "pkill -f node_modules/sync-rpc/lib/worker.js > /dev/null 2>&1",
        "posttest": "npm run cleanup-sync-request || true",
        "start-coverage": "nyc --reporter=text --reporter=lcov tsx src/server.ts",
        "dev": "tsx watch --clear-screen=false --include 'src/config.json' src/server.ts"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "downtimer": "^0.2.4",
        "express": "^4.19.2",
        "morgan": "^1.10.0",
        "node-libcurl": "^4.1.0",
        "slync": "^1.0.2",
        "tsx": "^4.19.4",
        "uuid": "^11.1.0",
        "validator": "^13.15.15"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.7",
        "@types/prompt-sync": "^4.2.3",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^10.0.0",
        "@types/validator": "^13.15.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-plugin-jest": "^27.9.0",
        "jest": "^29.7.0",
        "nyc": "^17.1.0",
        "swagger-ui-express": "^5.0.1",
        "sync-request-curl": "^3.0.0",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3",
        "yaml": "^2.4.5"
    },
    "nyc": {
        "exclude": [
            "echo.*"
        ],
        "reporter": [
            "text",
            "cobertura"
        ],
        "report-dir": "coverage"
    }
}
